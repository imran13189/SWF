@using SWF.Classes
@using SWF.Models
@model UsersModel


<div class="top-bar-frame">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 top-bar-box">
                <div class="row">
                    @if (Request.IsAuthenticated)
                    {
                        <input type="hidden" id="hdnRoleName" name="RoleName" value="@(Model.RoleId)" />
                    }
                    <div class="co-lg-3 col-md-4 col-sm-4 col-xs-6 left-box">
                        <ul class="social-media list-inline">
                            <li><span class="img"><a href="#">
                                <img src="~/Images/social-media-mail.png" alt="" /></a> </span></li>
                            <li><span class="img"><a href="#">
                                <img src="~/Images/social-media-g-plus.png" alt="" /></a> </span></li>
                            <li><span class="img"><a href="#">
                                <img src="~/Images/social-media-fb.png" alt="" /></a> </span></li>
                            <li><span class="img"><a href="#">
                                <img src="~/Images/social-media-tw.png" alt="" /></a> </span></li>
                            <li><span class="img"><a href="#">
                                <img src="~/Images/social-media-in.png" alt="" /></a> </span></li>
                        </ul>
                    </div>
                   
                    <div class="co-lg-3 col-md-4 col-sm-4 col-xs-6 right-box">
                        <ul class="top-info list-inline">
                          @*  <li>
                                <img src="~/Images/phone.png" alt="" />
                                your phone</li>*@
                            @if (User.Identity.IsAuthenticated)
                            {
                               if (Model.RoleId==1)
                                {
                                <li>Welcome Admin</li>
                                }
                                else
                                {
                                <li>Welcome @(Model.FirstName)</li>
                                }
                               
                                <li><a href="~/Home/Logout">Logout</a></li>
                            }
                            else
                            {
                                <li><a href="@Url.Action("Login", "Home", routeValues: new { area = "" })">Login</a> </li>
                                <li><a href="@Url.Action("Register", "Home", routeValues: new { area = "" })">Sign Up</a> </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

